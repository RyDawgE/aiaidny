@page
@model AI_Aid_VE.Pages.CustomizeModel
@{
    ViewData["Title"] = "Customize your Bot";
}



<main style="height:100%; background-image: url('../assets/images/circuits.png');position:absolute; left:0; right:0;">
    <div style="padding:35px; padding-top:60px;  position:relative; animation:animatetop 1s;">
        <h1 class="logo-primary" style="text-align: center;">AI AID</h1>
        <div class="logo-primary" style=" text-align: center;">Live. Life. Simpler.</div>
    </div>
    <div style="">
        <div class="container-bg" style="display:flex; width:80%;">

            <img src="~/assets/robots/mk1.png" id="robot-image" />

            <div class="flex-container" style="flex-grow:1;">
                <h1 class="logo-primary" style="display:flex; justify-content:center; font-size:24px">
                    Customize Your AI
                </h1>
                <div style="display:flex; justify-content:center;">
                    <form>
                        <div class="form-group">
                            <label for="robotNameField1" class="logo-primary">Bot Name</label>
                            <input type="text" class="form-control" id="robotNameField1" placeholder="A.I.D.E.N.">
                        </div>
                        <div class="form-group">
                            <label for="robotPersonalityField1" class="logo-primary">Bot AI Personality</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="persNote" placeholder="Enter Personality">
                            <small id="persNote" class="form-text text-muted">Will be used for GPT Prompt Injection at a later date. Example: "Funny, uses internet slang."</small>
                        </div>
                        <div class="form-group" style="display:flex; justify-content:center; flex-direction: column; align-items: flex-start;">
                            <label for="hue" class="logo-primary">Custom Paint Job</label>
                            <div id="hue">
                                <input class="js-range-input" type="range" value=0 max=340>
                                <output class="js-range-output" for="hue"></output>
                            </div>
                        </div>
                        <div style="display:flex; justify-content:center;">
                            <button class="btn btn-warning logo-primary" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Add to Cart
                            </button>
                        </div>
                    </form>
                </div>
                <script src="~/js/hue-slider.js"></script>
            </div>
        </div>
    </div>
</main>

<!-- Modal (probably copied straight out of the docs :D nope :D ) -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="completePurchaseModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 logo-primary" id="completePurchaseModal">Add Item to Cart</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>AI-AID Aiden Mk. I Robot - $950</div>
                <div>Custom Paint Job - FREE</div>
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-warning logo-primary" href="https://portal.veinternational.org/buybuttons/us015498/btn/aiden-mk1-bot001/">Confirm on VE-HUB</a>
            </div>
        </div>
    </div>
</div>
